<element type="element" group="Core" hidden="false" core="true">
    <name>JBZOO_ELEMENT_PRICE_IMAGE_NAME</name>
    <author>JBZoo.com</author>
    <creationDate>2014</creationDate>
    <copyright>Copyright (C) JBZoo.com</copyright>
    <authorEmail>admin@jbzoo.com</authorEmail>
    <authorUrl>http://jbzoo.com</authorUrl>
    <version>1.0</version>
    <description>JBZOO_ELEMENT_PRICE_IMAGE_DESC</description>

    <params>
        <param name="image" type="jbelementlist" types="jbimage" label="JBZOO_ELEMENT_PRICE_IMAGE_IMAGE"
               description="JBZOO_ELEMENT_PRICE_IMAGE_IMAGE_DESC" empty="JBZOO_ELEMENT_PRICE_IMAGE_IMAGE_EMPTY"/>
    </params>

    <params group="render">

        <param name="width" type="text" default="400" label="JBZOO_RESIZE_WIDTH"
               description="JBZOO_RESIZE_WIDTH_DESC"/>

        <param name="height" type="text" default="300" label="JBZOO_RESIZE_HEIGHT"
               description="JBZOO_RESIZE_HEIGHT_DESC"/>

        <param name="width_popup" type="text" default="1280" label="JBZOO_RESIZE_POPUP_WIDTH"
               description="JBZOO_RESIZE_WIDTH_POPUP_DESC"/>

        <param name="height_popup" type="text" default="800" label="JBZOO_RESIZE_POPUP_HEIGHT"
               description="JBZOO_RESIZE_HEIGHT_POPUP_DESC"/>

    </params>

    <params group="filter">

        <param name="jbzoo_filter_render" type="list" label="JBZOO_ELEMENT_TEMPLATE"
               description="JBZOO_ELEMENT_TEMPLATE_DESC" default="_auto_">

            <option value="imageexists-jqueryui">JBZOO_ELEMENT_TEMPLATE_IMAGEEXISTS_JQUERYUI</option>
            <option value="imageexists">JBZOO_ELEMENT_TEMPLATE_IMAGEEXISTS</option>
            <option value="hidden">JBZOO_ELEMENT_TEMPLATE_HIDDEN</option>

        </param>

        <param name="jbzoo_filter_default" type="text" label="JBZOO_FILTER_DEFAULT"
               description="JBZOO_FILTER_DEFAULT_DESC"/>

    </params>

</element>
