               description="JBZOO_QUICKVIEW_AUTO_SIZE_ENABLE_DESC"/>

        <param name="button_text" type="text" default="" label="JBZOO_QUICKVIEW_BUTTON_TEXT"
               description="JBZOO_QUICKVIEW_BUTTON_TEXT_DESC"/>

        <param name="popup_width" type="text" default="600" label="JBZOO_QUICKVIEW_WIDTH"
               description="JBZOO_QUICKVIEW_WIDTH_DESC"/>

