<element type="jbgallery" group="JBZoo">
    <name>JBZoo Image Slider (nivo)</name>
    <description>JBZoo Gallery</description>
    <author>JBZoo.com</author>
    <creationDate>2013 07</creationDate>
    <copyright>Copyright (C) JBZoo.com,  All rights reserved.</copyright>
    <authorEmail>admin@jbzoo.com</authorEmail>
    <authorUrl>http://jbzoo.com</authorUrl>
    <version>1.0</version>

    <params>
        <param name="name" type="text" default="" label="Name" description="Name used in item editor"/>
        <param name="description" type="text" default="" label="Description"
               description="DESCRIPTION_TOOLTIP_ITEM_EDITOR"/>
        <param name="directory" type="text" default="images" label="Source Directory"
               description="The gallery source directory inside the Joomla root directory"/>
    </params>

    <params group="render">
        <param name="showlabel" type="radio" default="0" label="Show Label" description="Show/Hide element label">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </param>
        <param name="altlabel" type="text" default="" label="Alternative Label" description="CUSTOM_LABEL"/>

        <param name="width" type="text" default="0" label="JBZOO_THUMBNAIL_WIDTH"
               description="JBZOO_THUMBNAIL_WIDTH_DESC"/>
        <param name="height" type="text" default="100" label="JBZOO_THUMBNAIL_HEIGHT"
               description="JBZOO_THUMBNAIL_HEIGHT_DESC"/>
        <param name="count" type="text" default="0" label="JBZOO_THUMBNAIL_COUNT"
               description="JBZOO_THUMBNAIL_COUNT_DESC"/>

        <param name="order" type="list" default="asc" label="JBZOO_THUMBNAIL_SORT"
               description="JBZOO_THUMBNAIL_SORT_DESC">
            <option value="asc">JBZOO_ASCENDING</option>
            <option value="desc">JBZOO_DESCENDING</option>
            <option value="random">JBZOO_RANDOM</option>
        </param>

        <param name="effects" type="jbselect" default="random" label="JBZOO_NIVO_EFFECTS"
               multiple="1" description="JBZOO_NIVO_EFFECTS_DESC">
            <option value="random">JBZOO_RANDOM</option>
            <option value="sliceDownRight">sliceDownRight</option>
            <option value="sliceDownLeft">sliceDownLeft</option>
            <option value="sliceUpRight">sliceUpRight</option>
            <option value="sliceUpLeft">sliceUpLeft</option>
            <option value="sliceUpDown">sliceUpDown</option>
            <option value="sliceUpDownLeft">sliceUpDownLeft</option>
            <option value="fold">fold</option>
            <option value="fade">fade</option>
            <option value="boxRandom">boxRandom</option>
            <option value="boxRain">boxRain</option>
            <option value="boxRainReverse">boxRainReverse</option>
            <option value="boxRainGrow">boxRainGrow</option>
            <option value="boxRainGrowReverse">boxRainGrowReverse</option>
        </param>

        <param name="animSpeed" type="text" default="500" label="JBZOO_NIVO_ANIMSPEED"
               description="JBZOO_NIVO_ANIMSPEED_DESC"/>
        <param name="pauseTime" type="text" default="3000" label="JBZOO_NIVO_PAUSETIME"
               description="JBZOO_NIVO_PAUSETIME_DESC"/>

        <param name="randomStart" type="jbbool" default="1" label="JBZOO_NIVO_RANDOMSTART"
               description="JBZOO_NIVO_RANDOMSTART_DESC"/>

        <param name="controlNavThumbs" type="jbbool" default="1" label="JBZOO_NIVO_CONTROLNAVTHUMBS"
               description="JBZOO_NIVO_CONTROLNAVTHUMBS_DESC"/>

        <param name="manualAdvance" type="jbbool" default="0" label="JBZOO_NIVO_MANUALADVANCE"
               description="JBZOO_NIVO_MANUALADVANCE_DESC"/>

    </params>

</element>