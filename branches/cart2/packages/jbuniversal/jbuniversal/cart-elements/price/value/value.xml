<element type="value" group="Core" core="true">
    <name>JBZOO_ELEMENT_PRICE_VALUE_NAME</name>
    <author>JBZoo.com</author>
    <creationDate>2014</creationDate>
    <copyright>Copyright (C) JBZoo.com</copyright>
    <authorEmail>admin@jbzoo.com</authorEmail>
    <authorUrl>http://jbzoo.com</authorUrl>
    <version>1.0</version>
    <description>JBZOO_ELEMENT_PRICE_VALUE_DESC</description>

    <params group="render">

        <param name="only_price_mode" type="list" default="1" label="JBZOO_JBPRICE_ONLY_PRICE_MODE"
               description="JBZOO_JBPRICE_ONLY_PRICE_MODE_DESC">
            <option value="1">JBZOO_JBPRICE_ONLY_PRICE_MODE_FULL</option>
            <option value="2">JBZOO_JBPRICE_ONLY_PRICE_MODE_PRICE</option>
            <option value="3">JBZOO_JBPRICE_ONLY_PRICE_MODE_TOTAL</option>
            <option value="4">JBZOO_JBPRICE_ONLY_PRICE_MODE_DISCOUNT</option>
            <option value="5">JBZOO_JBPRICE_ONLY_PRICE_MODE_SAVE</option>
        </param>

        <param name="show_empty" type="jbbool" default="1" label="JBZOO_JBPRICE_SHOW_EMPTY_VALUE"
               description="JBZOO_JBPRICE_SHOW_EMPTY_VALUE_DESC"/>

        <param name="empty_text" type="text" default="" label="JBZOO_JBPRICE_EMPTY_VALUE_TEXT"
               description="JBZOO_JBPRICE_EMPTY_VALUE_TEXT_DESC"/>

    </params>

    <params group="filter">

        <param name="@spacer_value" type="jbspacer" default="JBZOO_FILTER_JBPRICE_VALUE"/>

        <param name="jbzoo_filter_render" type="hidden" value="value" default="value"/>

        <param name="jbzoo_filter_template" type="list" label="JBZOO_FILTER_JBPRICE_TEMPLATE_VALUE"
               description="JBZOO_FILTER_JBPRICE_TEMPLATE_VALUE_DESC" default="slider">

            <option value="0">JBZOO_FILTER_JBPRICE_TEMPLATE_NONE</option>
            <option value="simple">JBZOO_FILTER_JBPRICE_TEMPLATE_SIMPLE</option>
            <option value="range">JBZOO_ELEMENT_TEMPLATE_TEXT_RANGE</option>
            <option value="slider">JBZOO_ELEMENT_TEMPLATE_SLIDER</option>

        </param>

        <param name="jbzoo_filter_currency_default" type="jbcurrency" default="EUR"
               label="JBZOO_FILTER_JBPRICE_CURRENCY_DEFAULT"
               description="JBZOO_FILTER_JBPRICE_CURRENCY_DEFAULT_DESC" multiple="0"/>

        <param name="@spacer_slider" type="jbspacer" default="JBZOO_SLIDER_ONLY"/>

        <param name="jbzoo_filter_slider_auto" type="jbbool" default="0" label="JBZOO_FILTER_SLIDER_AUTO"
               description="JBZOO_FILTER_SLIDER_AUTO_DESC"/>

        <param name="jbzoo_filter_slider_min" type="text" default="0" label="JBZOO_FILTER_SLIDER_MIN"
               description="JBZOO_FILTER_SLIDER_MIN_DESC"/>

        <param name="jbzoo_filter_slider_max" type="text" default="10000" label="JBZOO_FILTER_SLIDER_MAX"
               description="JBZOO_FILTER_SLIDER_MAX_DESC"/>

        <param name="jbzoo_filter_slider_step" type="text" default="100" label="JBZOO_FILTER_SLIDER_STEP"
               description="JBZOO_FILTER_SLIDER_STEP_DESC"/>

        <param name="jbzoo_filter_default" type="text" label="JBZOO_FILTER_DEFAULT"
               description="JBZOO_FILTER_DEFAULT_DESC"/>

        <param name="jbzoo_filter_placeholder" type="text" label="JBZOO_FILTER_PLACEHOLDER"
               description="JBZOO_FILTER_PLACEHOLDER_DESC"/>

    </params>

</element>
