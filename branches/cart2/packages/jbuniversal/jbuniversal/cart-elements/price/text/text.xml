<element type="element" group="Core" hidden="false">
    <name>JBZOO_ELEMENT_PRICE_TEXT_NAME</name>
    <author>JBZoo.com</author>
    <creationDate>2014</creationDate>
    <copyright>Copyright (C) JBZoo.com</copyright>
    <authorEmail>admin@jbzoo.com</authorEmail>
    <authorUrl>http://jbzoo.com</authorUrl>
    <version>1.0</version>
    <description>JBZOO_ELEMENT_PRICE_TEXT_DESC</description>

    <params group="render">
        <param name="template" type="list" label="JBZOO_JBPRICE_ELEMENT_TEMPLATE"
               description="JBZOO_JBPRICE_ELEMENT_TEMPLATE_DESC" default="select">

            <option value="radio">JBZOO_ELEMENT_TEMPLATE_RADIO</option>
            <option value="select">JBZOO_ELEMENT_TEMPLATE_SELECT</option>
            <option value="chosen">JBZOO_ELEMENT_TEMPLATE_SELECT_CHOSEN</option>
            <option value="buttons">JBZOO_ELEMENT_TEMPLATE_JQUERYUI</option>
        </param>

        <param name="label" type="label" default="JBZOO_CORE_PRICE_OPTIONS_DEFAULT" label="JBZOO_JBPRICE_OPTIONS_LABEL"
               description="JBZOO_JBPRICE_OPTIONS_LABEL_DESC"/>
    </params>

    <params group="filter">

        <param name="jbzoo_filter_render" type="list" label="JBZOO_ELEMENT_TEMPLATE"
               description="JBZOO_ELEMENT_TEMPLATE_DESC" default="_auto_">

            <option value="_auto_">JBZOO_ELEMENT_TEMPLATE_AUTO</option>
            <option value="text">JBZOO_ELEMENT_TEMPLATE_TEXT</option>
            <option value="checkbox">JBZOO_ELEMENT_TEMPLATE_CHECKBOX</option>
            <option value="jqueryui">JBZOO_ELEMENT_TEMPLATE_JQUERYUI</option>
            <option value="radio">JBZOO_ELEMENT_TEMPLATE_RADIO</option>
            <option value="select">JBZOO_ELEMENT_TEMPLATE_SELECT</option>
            <option value="select-chosen">JBZOO_ELEMENT_TEMPLATE_SELECT_CHOSEN</option>
            <option value="hidden">JBZOO_ELEMENT_TEMPLATE_HIDDEN</option>
        </param>

        <param name="multiple" type="jbbool" default="0" label="JBZOO_FILTER_MULTIPLE"
               description="JBZOO_FILTER_MULTIPLE_DESC"/>

        <param name="jbzoo_filter_default" type="text" label="JBZOO_FILTER_DEFAULT"
               description="JBZOO_FILTER_DEFAULT_DESC"/>

        <param name="jbzoo_filter_placeholder" type="text" label="JBZOO_FILTER_PLACEHOLDER"
               description="JBZOO_FILTER_PLACEHOLDER_DESC"/>

        <param name="jbzoo_filter_count" type="jbbool" default="1"
               label="JBZOO_FILTER_COUNT" description="JBZOO_FILTER_COUNT_DESC"/>

        <!-- jquery.ui autocomplete -->
        <param name="@spacer" type="jbspacer" default="JBZOO_AUTOCOMPLETE_TEXT_ONLY"/>

        <param name="jbzoo_filter_autocomplete" type="jbbool" default="1"
               label="JBZOO_FILTER_AUTOCOMPLETE" description="JBZOO_FILTER_AUTOCOMPLETE_DESC"/>

    </params>

</element>
