    <copyright>Copyright (C) JBZoo.com</copyright>
    <authorEmail>admin@jbzoo.com</authorEmail>
    <authorUrl>http://jbzoo.com</authorUrl>
    <version>1.0</version>
    <description>JBZOO_ELEMENT_PRICE_OPTION_DESC</description>

    <params>
        <param name="required" type="jbbool" default="0" label="JBZOO_ELEMENT_PRICE_OPTION_REQUIRED"
               description="JBZOO_ELEMENT_PRICE_OPTION_REQUIRED_DESC"/>

        <param name="options" type="textarea" default="" label="JBZOO_ELEMENT_PRICE_OPTION_OPTIONS"
               description="JBZOO_ELEMENT_PRICE_OPTION_OPTIONS_DESC"/>
    </params>

    <params group="render">
        <param name="layout" type="list" label="JBZOO_ELEMENT_PRICE_OPTION_LAYOUT"
               description="JBZOO_ELEMENT_PRICE_OPTION_LAYOUT_DESC" default="select">
            <option value="text">JBZOO_ELEMENT_PRICE_OPTION_LAYOUT_TEXT</option>
            <option value="radio">JBZOO_ELEMENT_PRICE_OPTION_LAYOUT_RADIO</option>
            <option value="select">JBZOO_ELEMENT_PRICE_OPTION_LAYOUT_SELECT</option>
            <option value="select-chosen">JBZOO_ELEMENT_PRICE_OPTION_LAYOUT_SELECT_CHOSEN</option>
            <option value="buttons">JBZOO_ELEMENT_PRICE_OPTION_LAYOUT_BUTTONS</option>
        </param>

        <param name="label" type="jbtext" default="" label="JBZOO_ELEMENT_PRICE_OPTION_LABEL"
               description="JBZOO_ELEMENT_PRICE_OPTION_LABEL_DESC"/>
    </params>

    <params group="filter">

        <param name="jbzoo_filter_render" type="list" label="JBZOO_ELEMENT_TEMPLATE"
               description="JBZOO_ELEMENT_TEMPLATE_DESC" default="_auto_">
            <option value="_auto_">JBZOO_ELEMENT_TEMPLATE_AUTO</option>
            <option value="text">JBZOO_ELEMENT_TEMPLATE_TEXT</option>
