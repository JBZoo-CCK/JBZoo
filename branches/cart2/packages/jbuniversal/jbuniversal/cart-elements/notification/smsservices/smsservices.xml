               type="jbbool"
               default="1"
               label="JBZOO_NOTIFICATION_SMSSERVICE_USEHTTP"
               description="JBZOO_NOTIFICATION_SMSSERVICE_USEHTTP_DESC" />

        <param name="message"
               type="jbtextarea"
               rows="15"
