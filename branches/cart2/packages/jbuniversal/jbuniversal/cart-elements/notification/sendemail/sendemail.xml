               description="JBZOO_ELEMENT_NOTIFICATION_SENDEMAIL_FROMNAME_DESC"/>

        <param name="subject" type="textarea" default="" label="JBZOO_ELEMENT_NOTIFICATION_SENDEMAIL_SUBJECT"
               description="JBZOO_ELEMENT_NOTIFICATION_SENDEMAIL_SUBJECT_DESC"/>

        <param name="macros" type="spacer" default="JBZOO_ELEMENT_NOTIFICATION_SENDEMAIL_MACROS_DEFAULT"
               label="JBZOO_ELEMENT_NOTIFICATION_SENDEMAIL_MACROS" description="JBZOO_ELEMENT_NOTIFICATION_SENDEMAIL_MACROS_DESC"/>

