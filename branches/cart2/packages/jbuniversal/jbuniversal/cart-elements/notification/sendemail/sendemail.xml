        <param name="access" type="zooaccesslevel" default="" label="JBZOO_ELEMENT_ACCESS"
               description="JBZOO_ELEMENT_ACCESS_DESC"/>

        <param name="layout_email" type="jblayout" default="" auto="false"
               label="JBZOO_ELEMENT_NOTIFICATION_SENDEMAIL_LAYOUY_LIST"
               description="JBZOO_ELEMENT_NOTIFICATION_SENDEMAIL_LAYOUY_LIST_DESC"/>

        <param name="images" type="jbbool" default="0" label="JBZOO_ELEMENT_NOTIFICATION_SENDEMAIL_ITEM_IMAGES"
               description="JBZOO_ELEMENT_NOTIFICATION_SENDEMAIL_ITEM_IMAGES_DESC"/>

