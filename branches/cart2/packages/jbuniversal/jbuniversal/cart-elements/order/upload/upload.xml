<?xml version="1.0" encoding="utf-8"?>
<element type="element" group="Core" hidden="false">
    <name>Upload</name>
    <author>JBZoo.com</author>
    <creationDate>2014</creationDate>
    <copyright>Copyright (C) JBZoo.com</copyright>
    <authorEmail>admin@jbzoo.com</authorEmail>
    <authorUrl>http://jbzoo.com</authorUrl>
    <version>1.0</version>
    <description>JBZoo Cart Element Core System</description>

    <params>
        <param name="upload_extensions" type="text" default="png,jpg,doc,mp3,mov,avi,mpg,zip,rar,gz"
               label="Legal Extensions"
               description="UPLOAD_EXTENSION_DESCRIPTION"/>

        <param name="upload_directory" type="text" default="images/jbzoo/uploads/" label="Upload Directory"
               description="UPLOAD_DIR_DESCRIPTION"/>

        <param name="max_upload_size" type="text" default="512" label="MAX UPLOAD SIZE KB"
               description="UPLOAD_MAX_SIZE_DESCRIPTION"/>

        <param name="name" type="text" default="" label="JBZOO_ELEMENT_NAME"
               description="JBZOO_ELEMENT_NAME_DESC"/>

        <param name="description" type="text" default="" label="JBZOO_ELEMENT_DESCRIPTION"
               description="JBZOO_ELEMENT_DESCRIPTION_DESC"/>

        <param name="access" type="zooaccesslevel" default="" label="JBZOO_ELEMENT_ACCESS"
               description="JBZOO_ELEMENT_ACCESS_DESC"/>
    </params>

    <params group="render">
        <param name="required" type="jbbool" default="" label="JBZOO_ELEMENT_REQUIRED"
               description="JBZOO_ELEMENT_REQUIRED_DESC"/>
    </params>

</element>
