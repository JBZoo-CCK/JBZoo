<form>
    <fields>
        <fieldset name="licence" label="">
            <field type="text"
                   default=""
                   size="60"
                   name="JBZOO_USERNAME"
                   label="JBZOO_FORM_LICENCE_LOGIN"
                   description="JBZOO_FORM_LICENCE_LOGIN_DESCRIPTION"/>

            <field type="password"
                   default=""
                   size="60"
                   name="JBZOO_PASSWORD"
                   label="JBZOO_FORM_LICENCE_PASSWORD"
                   description="JBZOO_FORM_LICENCE_PASSWORD_DESCRIPTION"/>

            <field type="hidden" name="component" default="tmpl"/>
            <field type="hidden" name="option" default="com_zoo"/>
            <field type="hidden" name="controller" default="jbtools"/>
            <field type="hidden" name="task" default="saveLicence"/>
            <field type="hidden" name="redirect" default=""/>
        </fieldset>
    </fields>
</form>
