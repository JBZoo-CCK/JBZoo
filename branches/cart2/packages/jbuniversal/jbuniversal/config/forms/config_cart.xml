<form>
    <fields>
        <fieldset name="others"
                  label=""
                  addfieldpath="/media/zoo/applications/jbuniversal/joomla/fields">

            <!--  general configs -->
            <field name="spacer_cart_general" type="jbspacer" default="JBZOO_CART_CONFIG_CART_GENERAL"/>

            <field name="enable" type="jbbool" default="1" label="JBZOO_CART_CONFIG_ENABLE"
                   description="JBZOO_CART_CONFIG_ENABLE_DESC"/>

            <field name="access" type="accesslevel" default="1" label="JBZOO_CART_CONFIG_ACCESS"
                   description="JBZOO_CART_CONFIG_ACCESS_DESC"/>

            <!--  general configs -->
            <field name="spacer_cart_template" type="jbspacer" default="JBZOO_CART_CONFIG_CART_TEMPLATE"/>

            <field name="tmpl_name" type="text" default="catalog" label="JBZOO_CART_CONFIG_TMPL_NAME"
                   description="JBZOO_CART_CONFIG_TMPL_NAME_DESC"/>

            <field name="tmpl_item_link" type="jbbool" default="1" label="JBZOO_CART_CONFIG_TMPL_ITEM_LINK"
                   description="JBZOO_CART_CONFIG_TMPL_ITEM_LINK_DESC"/>

            <field name="tmpl_image_show" type="jbbool" default="1" label="JBZOO_CART_CONFIG_TMPL_IMAGE_SHOW"
                   description="JBZOO_CART_CONFIG_TMPL_IMAGE_SHOW_DESC"/>

            <field name="tmpl_image_link" type="jbbool" default="1" label="JBZOO_CART_CONFIG_TMPL_IMAGE_LINK"
                   description="JBZOO_CART_CONFIG_TMPL_IMAGE_LINK_DESC"/>

            <field name="tmpl_image_width" type="text" default="75" label="JBZOO_CART_CONFIG_TMPL_IMAGE_WIDTH"
                   description="JBZOO_CART_CONFIG_TMPL_IMAGE_WIDTH_DESC"/>

            <field name="tmpl_image_height" type="text" default="75" label="JBZOO_CART_CONFIG_TMPL_IMAGE_HEIGHT"
                   description="JBZOO_CART_CONFIG_TMPL_IMAGE_HEIGHT_DESC"/>

            <field name="tmpl_sku_show" type="jbbool" default="1" label="JBZOO_CART_CONFIG_TMPL_SKU_SHOW"
                   description="JBZOO_CART_CONFIG_TMPL_SKU_SHOW_DESC"/>

            <field name="tmpl_price4one" type="jbbool" default="1" label="JBZOO_CART_CONFIG_TMPL_PRICE4ONE"
                   description="JBZOO_CART_CONFIG_TMPL_PRICE4ONE_DESC"/>

            <field name="tmpl_quntity" type="jbbool" default="1" label="JBZOO_CART_CONFIG_TMPL_QUNTITY"
                   description="JBZOO_CART_CONFIG_TMPL_QUNTITY_DESC"/>

            <field name="tmpl_subtotal" type="jbbool" default="1" label="JBZOO_CART_CONFIG_TMPL_SUBTOTAL"
                   description="JBZOO_CART_CONFIG_TMPL_SUBTOTAL_DESC"/>

            <!--  general configs -->
            <field name="spacer_shop_general" type="jbspacer" default="JBZOO_CART_CONFIG_SHOP_GENERAL"/>

            <field name="default_order_status" type="jbstatus" default="new" label="JBZOO_CART_CONFIG_ORDER_STATUS"
                   status_type="STATUS_ORDER" description="JBZOO_CART_CONFIG_ORDER_STATUS_DESC"/>

            <field name="default_currency" type="jbcurrency" defaultCode="0" default="EUR"
                   label="JBZOO_CART_CONFIG_CURRENCY" description="JBZOO_CART_CONFIG_CURRENCY_DESC"/>

            <!--  shop info configs -->
            <field name="spacer_shop_about" type="jbspacer" default="JBZOO_CART_CONFIG_SHOP_ABOUT"/>

            <field name="shop_name" type="text" default="" label="JBZOO_CART_CONFIG_SHOP_NAME"
                   description="JBZOO_CART_CONFIG_SHOP_NAME_DESC"/>

            <field name="shop_details" type="text" default="" label="JBZOO_CART_CONFIG_SHOP_ABOUT_DETAILS"
                   description="JBZOO_CART_CONFIG_SHOP_ABOUT_DETAILS_DESC"/>

            <!--  shipping configs -->
            <field name="spacer_shop_shipping" type="jbspacer" default="JBZOO_CART_CONFIG_SHOP_SHIPPING"/>

            <field name="default_shipping" type="jbshipping" default="" label="JBZOO_CART_CONFIG_SHIPPING"
                   description="JBZOO_CART_CONFIG_SHIPPING_DESC"/>

            <field name="default_shipping_status" type="jbstatus" default="new"
                   label="JBZOO_CART_CONFIG_SHIPPING_STATUS"
                   status_type="STATUS_SHIPPING" description="JBZOO_CART_CONFIG_SHIPPING_STATUS_DESC"/>

            <field name="default_shipping_country" type="text" default="" label="JBZOO_CART_CONFIG_SHIPPING_COUNTRY"
                   description="JBZOO_CART_CONFIG_SHIPPING_COUNTRY_DESC"/>

            <field name="default_shipping_city" type="text" default="" label="JBZOO_CART_CONFIG_SHIPPING_CITY"
                   description="JBZOO_CART_CONFIG_SHIPPING_CITY_DESC"/>

            <field name="default_shipping_address" type="text" default="" label="JBZOO_CART_CONFIG_SHIPPING_ADDRESS"
                   description="JBZOO_CART_CONFIG_SHIPPING_ADDRESS_DESC"/>

            <field name="default_shipping_zip" type="text" default=""
                   label="JBZOO_CART_CONFIG_SHIPPING_ZIP" description="JBZOO_CART_CONFIG_SHIPPING_ZIP_DESC"/>

            <!--  payment configs -->
            <field name="spacer_shop_payment" type="jbspacer" default="JBZOO_CART_CONFIG_SHOP_PAYMENT"/>

            <field name="default_payment" type="jbpayment" default="" label="JBZOO_CART_CONFIG_PAYMENT"
                   description="JBZOO_CART_CONFIG_PAYMENT_DESC"/>

            <field name="default_payment_status" type="jbstatus" default="new" label="JBZOO_CART_CONFIG_PAYMENT_STATUS"
                   status_type="STATUS_PAYMENT" description="JBZOO_CART_CONFIG_PAYMENT_STATUS_DESC"/>

            <field name="default_payment_status_success" type="jbstatus" default="success"
                   label="JBZOO_CART_CONFIG_PAYMENT_STATUS_SUCCESS"
                   status_type="STATUS_PAYMENT" description="JBZOO_CART_CONFIG_PAYMENT_STATUS_SUCCESS_DESC"/>

            <field name="default_payment_status_error" type="jbstatus" default="error"
                   label="JBZOO_CART_CONFIG_PAYMENT_STATUS_ERROR" status_type="STATUS_PAYMENT"
                   description="JBZOO_CART_CONFIG_PAYMENT_STATUS_ERROR_DESC"/>
        </fieldset>
    </fields>
</form>
